---
import '../styles/global.scss';
import { SiteTitle, MainWebsiteUrl } from '../consts';
---

<header>
	<nav>
		<h2 id="site_title">
			<a href="/">
				<svg
					aria-hidden="true"
					xmlns="http://www.w3.org/2000/svg"
					width="24"
					height="24"
					viewBox="0 0 24 24"
					fill="none"
				>
					<!-- Narvana logo - stylized "N" with orange gradient -->
					<defs>
						<linearGradient id="narvana-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
							<stop offset="0%" stop-color="#fb923c" />
							<stop offset="100%" stop-color="#e86a30" />
						</linearGradient>
					</defs>
					<rect width="24" height="24" rx="6" fill="url(#narvana-gradient)" />
					<path
						d="M7 17V7h2l4 6V7h2v10h-2l-4-6v6H7z"
						fill="white"
					/>
				</svg>
				{SiteTitle}
			</a>
		</h2>
		<div class="links">
			<a href={MainWebsiteUrl} target="_blank" rel="noopener noreferrer">Narvana</a>
			<a href="mailto:hello@narvana.io">Contact</a>
		</div>
	</nav>
</header>

<style>
	.links a {
		text-decoration: none;
	}
	.links a:first-child {
		margin-right: 1.5rem;
	}
</style>
